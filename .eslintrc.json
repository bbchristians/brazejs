{
  "extends": "standard",
  "env": {
    "mocha": true,
    "es6": true,
    "browser": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "mocha",
    "standard",
    "@typescript-eslint",
    "promise"
  ],
  "rules": {
    "no-var": 2,
    "prefer-const": 2,
    "no-unused-vars": "off",
    "import/export": "off",
    "@typescript-eslint/no-unused-vars": ["error", { "vars": "all", "args": "none", "ignoreRestSiblings": false }]
  }
}
